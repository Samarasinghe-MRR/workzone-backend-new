{
  "info": {
    "name": "WorkZone Quotation Service",
    "description": "API collection for testing the Quotation Service endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3004",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiJ0ZXN0LXByb3ZpZGVyIiwiZW1haWwiOiJwcm92aWRlckBleGFtcGxlLmNvbSIsInVzZXJUeXBlIjoicHJvdmlkZXIiLCJyb2xlIjoidXNlciIsImlhdCI6MTY4ODEyMzQ1NiwiZXhwIjoxNjg4MjA5ODU2fQ.example",
      "type": "string"
    },
    {
      "key": "test_job_id",
      "value": "test-job-123",
      "type": "string"
    },
    {
      "key": "quote_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "Provider Quotes",
      "item": [
        {
          "name": "Submit Quote",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('quote_id', responseJson.id);",
                  "    pm.test('Quote submitted successfully', function () {",
                  "        pm.expect(responseJson.status).to.eql('PENDING');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"job_id\": \"{{test_job_id}}\",\n  \"price\": 150.00,\n  \"estimated_time\": \"2-3 hours\",\n  \"message\": \"I can complete this cleaning job professionally\",\n  \"proposed_start\": \"2024-01-15T09:00:00Z\",\n  \"valid_until\": \"2024-01-20T23:59:59Z\",\n  \"includes_tools\": true,\n  \"eco_friendly\": true,\n  \"warranty_period\": \"6 months\",\n  \"materials_cost\": 20.00,\n  \"labor_cost\": 130.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/quotation/provider/quotes",
              "host": ["{{base_url}}"],
              "path": ["quotation", "provider", "quotes"]
            }
          }
        },
        {
          "name": "Get Provider Quotes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quotation/provider/quotes",
              "host": ["{{base_url}}"],
              "path": ["quotation", "provider", "quotes"]
            }
          }
        },
        {
          "name": "Get Provider Quotes by Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quotation/provider/quotes?status=PENDING",
              "host": ["{{base_url}}"],
              "path": ["quotation", "provider", "quotes"],
              "query": [
                {
                  "key": "status",
                  "value": "PENDING"
                }
              ]
            }
          }
        },
        {
          "name": "Update Quote",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 140.00,\n  \"message\": \"Updated quote with better pricing\",\n  \"materials_cost\": 15.00,\n  \"labor_cost\": 125.00\n}"
            },
            "url": {
              "raw": "{{base_url}}/quotation/provider/quotes/{{quote_id}}",
              "host": ["{{base_url}}"],
              "path": ["quotation", "provider", "quotes", "{{quote_id}}"]
            }
          }
        },
        {
          "name": "Cancel Quote",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quotation/provider/quotes/{{quote_id}}",
              "host": ["{{base_url}}"],
              "path": ["quotation", "provider", "quotes", "{{quote_id}}"]
            }
          }
        },
        {
          "name": "Get Provider Metrics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quotation/provider/metrics",
              "host": ["{{base_url}}"],
              "path": ["quotation", "provider", "metrics"]
            }
          }
        }
      ]
    },
    {
      "name": "Customer Quotes",
      "item": [
        {
          "name": "Get Quotes for Job",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quotation/customer/jobs/{{test_job_id}}/quotes",
              "host": ["{{base_url}}"],
              "path": ["quotation", "customer", "jobs", "{{test_job_id}}", "quotes"]
            }
          }
        },
        {
          "name": "Get Quote Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quotation/customer/quotes/{{quote_id}}",
              "host": ["{{base_url}}"],
              "path": ["quotation", "customer", "quotes", "{{quote_id}}"]
            }
          }
        },
        {
          "name": "Accept Quote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_notes\": \"Looks good, please proceed as quoted\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/quotation/customer/quotes/{{quote_id}}/accept",
              "host": ["{{base_url}}"],
              "path": ["quotation", "customer", "quotes", "{{quote_id}}", "accept"]
            }
          }
        },
        {
          "name": "Reject Quote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_notes\": \"Price is too high, looking for better options\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/quotation/customer/quotes/{{quote_id}}/reject",
              "host": ["{{base_url}}"],
              "path": ["quotation", "customer", "quotes", "{{quote_id}}", "reject"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Test Cases",
      "item": [
        {
          "name": "Submit Duplicate Quote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"job_id\": \"{{test_job_id}}\",\n  \"price\": 160.00,\n  \"estimated_time\": \"3 hours\",\n  \"message\": \"Duplicate quote test\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/quotation/provider/quotes",
              "host": ["{{base_url}}"],
              "path": ["quotation", "provider", "quotes"]
            }
          }
        },
        {
          "name": "Accept Non-existent Quote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_notes\": \"Test acceptance of non-existent quote\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/quotation/customer/quotes/non-existent-id/accept",
              "host": ["{{base_url}}"],
              "path": ["quotation", "customer", "quotes", "non-existent-id", "accept"]
            }
          }
        },
        {
          "name": "Unauthorized Access",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/quotation/provider/quotes",
              "host": ["{{base_url}}"],
              "path": ["quotation", "provider", "quotes"]
            }
          }
        }
      ]
    }
  ]
}
